# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2

[*.py]
indent_size = 4
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx}]
indent_size = 2
trim_trailing_whitespace = true

[*.yaml]
trim_trailing_whitespace = true

[{Makefile,**.mk}]
indent_style = tab
indent_size = 4
